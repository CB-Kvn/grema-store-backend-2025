{
  "name": "grema-store-backend-2025",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "server:dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "prebuild": "node -e \"const fs = require('fs'); try { fs.rmSync('dist', { recursive: true }); } catch {}\"",
    "start": "node ./dist/index.js",
    "start:debug": "pwd && ls -la && ls -la dist/ && node ./dist/index.js",
    "start:debug-node": "node debug-start.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "dotenv -e src/config/dev.env -- npx prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:db:push": "prisma db push",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.6.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "imagekit": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "sanitize-html": "^2.15.0",
    "whatsapp-cloud-api": "^0.3.1",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/hpp": "^0.2.6",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.19.0",
    "@types/sanitize-html": "^2.15.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0",
    "prisma": "^5.10.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CB-Kvn/grema-store-backend-2025.git"
